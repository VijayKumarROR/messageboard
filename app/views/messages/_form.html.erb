<%= simple_form_for @message, :html => {:multipart => true} do |m|%>

	<%= m.input :title, label: "Message Title", :required => true %>
	<%= m.input :description, :required => true %>
	<%= m.file_field :attachment%>
	<%= m.button :submit %>
<% end %>


